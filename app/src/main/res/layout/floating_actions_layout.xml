<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="15dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendCopyOfNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/share"
            app:fabSize="mini"
            app:rippleColor="@color/grey" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/changeFontFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/font"
            app:fabSize="mini"
            app:rippleColor="@color/grey" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/delete"
            app:fabSize="mini"
            app:rippleColor="@color/grey" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/save"
            app:fabSize="mini"
            app:rippleColor="@color/grey" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/colorPickerFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/color_palette"
            app:fabSize="mini"
            app:rippleColor="@color/grey" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toolsFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:backgroundTint="#f9c80e"
            android:src="@drawable/options"
            app:backgroundTint="@color/white"
            app:rippleColor="@color/grey" />

    </FrameLayout>
</layout>