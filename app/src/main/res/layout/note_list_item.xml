<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="1dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noteItemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/date_bar_bg"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="8dp"
                android:text="dd-mm-yy"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/noteItemCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/checkNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_check_circle_24"/>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noteItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="4dp"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:layout_below="@id/checkNote"
                        android:text="Title"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/noteItemTitle"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="?android:attr/listDivider" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noteItemContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="end"
                        android:maxLines="12"
                        android:padding="5dp"
                        android:text="Some Text"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </RelativeLayout>

</layout>